{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_details'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="p-3">
            <h1 class="text-center display-3">{{ user.firstname }} {{ user.lastname }} </h1>
            {% if user is defined and user|length %}
                    <p class="list-group-item">{{ 'label.firstName'|trans }}</p>
                    <p class="list-group-item">{{ user.firstname }}</p>
                    <p class="list-group-item">{{ 'label.lastName'|trans }}</p>
                    <p class="list-group-item">{{ user.lastname }}</p>
                    <p class="list-group-item">{{ 'label.email'|trans }}</p>
                    <p class="list-group-item">{{ user.email }}</p>
                <div class="ml-auto">

                    <a class="btn btn-outline-secondary pr-5" type="button" href="{{ url('user_edit', {id: user.id}) }}"
                       title="{{ 'action.edit'|trans }}">
                        {{ 'action.edit'|trans }}</a>
                    <a class="btn btn-outline-warning" type="button"
                       href="{{ url('user_edit_password', {id: user.id}) }}"
                       title="{{ 'action.edit_password'|trans }}">
                        {{ 'action.edit_password'|trans }}
                    </a>

                </div>
            {% else %}
                <p class="text-center display-2 mt-5">
                    {{ 'message.record_not_found'|trans }}
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}